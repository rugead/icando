  hr

  div.row
    for country in countries
      div.col.s12.m4.l3
        div.card
          div.card-image 
          div.card-content
          
            div.fab_a
              div.fixed-action-btn.horizontal.fab_b
                a.btn-floating.btn-tiny.blue-grey
                  i.tiny.mdi-navigation-menu
                ul#fab_ul
                  li#fab_li
                      a.btn-floating.green.darken-2(href='/country/new')
