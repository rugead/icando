                      input(type='hidden', name='id', value='#{country._id}')
                      input(type='hidden', name='_method', value='delete')
                      button.btn-floating.deep-orange(type='submit')
                        i.material-icons clear
           
            span.card-title
              a(href='country/#{country._id}') #{country.name}
            div= country.user_id 
          div.card-action
            
          
          
      
      